<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Map.it Home Page</title>
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/favorites.js"></script>
  </head>
  <body>
     <nav id="nav-bar">
      <% include ./partials/_navbar.html %>
    </nav>
    <main class="container">
      <section class="new-map">
      <% if (user_id) { %>
        <form method="POST" action = '/maps'>
          <input id='create-new-map' class="btn btn-info" type="submit" value="Create New Map">
        </form>
        <% } else { %>
        <p> Please log in to create a map! </p>
        <% } %>
      </section>
       <section id="all-maps">
        <% for (map of maps) { %>
        <article class="map">
          <header>
           <h1 class="text-center" > <%= map.title %></h1>
           <div class="text-center">
           <a href='/maps/<%= map.map_id %>/edit'>Edit Map</a>
           </div>
           </header>
           <div id="map-<%= map.map_id %>" class="map-id"> </div>
           <footer data-mapid= <%= map.map_id %> >
            Created <%= map.created_at %> by <%= map.name %>  </span>
            </form>
              <% if (map.fav_map == map.map_id) { %>
             <p class= "glyphicon glyphicon-heart"> </p>
             <% } else { %>
             <p class= "glyphicon glyphicon-heart-empty"> </p>
             <% } %>
           </footer>

        </article>
        <% } %>
      </section>
    </main>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCYZBReykBLqLSONyWSUWycT_1csuRjJyY&region=CA">
    </script>
  </body>
</html>
